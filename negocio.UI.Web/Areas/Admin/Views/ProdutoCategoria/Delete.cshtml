@model negocio.UI.Web.Areas.Admin.Models.ProdutoCategoriaViewModel

@{
    ViewBag.Title = "Excluir Categoria";
}

<h2>Excluir Categoria</h2>
@Mensagem.Erro(ViewBag.status)
<div>
    <h4>Deseja realmente excluir esse registro? </h4>
    <hr />
    @Html.HiddenFor(Model => Model.Id)
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Voltar", "Index", null, new {@class = "btn btn-primary"})
            <input type="submit" value="Excluir" class="btn btn-default" />
        </div>
    }
</div>