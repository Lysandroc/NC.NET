@model negocio.UI.Web.Areas.Admin.Models.ProdutoCategoriaViewModel

@{
    ViewBag.Title = "Criar Categoria";
}

<h3>Cadastro categeria</h3>
@Mensagem.Erro(ViewBag.status)

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group" >
            @Html.LabelFor(model => model.Categoria, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @*@Html.RadioButton("Categoria", "Aro", true)         Aro
                @Html.RadioButton("Categoria", "Pneu", false)       Pneu*@
                @Html.EditorFor(model => model.Categoria, new {htmlAttributes = new {@class = "form-control"}}) 
                @Html.ValidationMessageFor(model => model.Categoria, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Voltar", "Index", null, new {@class = "btn btn-primary"})
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </div>
    </div>
}