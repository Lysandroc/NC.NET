<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

    </head>

    <body>
    
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    @Html.ActionLink("Administrativo", "Index", "Gerir", new {area = "admin"}, new {@class = "navbar-brand"})
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Registro <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Carro", "Index", "Carro")</li>
                                <li>@Html.ActionLink("Cliente", "Index", "Cliente")</li>
                                <li>@Html.ActionLink("Fornecedor", "Index", "Fornecedor")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Produto", "Index", "Produto")</li>
                                <li>@Html.ActionLink("Produto Categoria", "Index", "ProdutoCategoria")</li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Movimento <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Venda", "Index", "Venda")</li>
                                <li>@Html.ActionLink("Compra", "Index", "Compra")</li>
                                <li>@Html.ActionLink("Troca", "Index", "Troca")</li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Controle <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Estoque", "Index", "Home")</li>
                                <li>@Html.ActionLink("Pagamento", "Index", "Cliente")</li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Relatórios <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("A", "Index", "Home")</li>
                                <li>@Html.ActionLink("B", "Index", "Cliente")</li>
                                <li>@Html.ActionLink("C", "Index", "Cliente")</li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>

        <div class="container body-content">

            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year </p>
            </footer>
        </div>

        @RenderSection("scripts", false)
    </body>
</html>