@model negocio.UI.Web.Areas.Admin.Models.ClienteViewModel

@{
    ViewBag.Title = "Excluir Cliente";
}
<script>
    $(document).ready(function() {
        $("#DataNascimento").mask('00/00/0000');
        $('#Celular').mask('(00)0000-0000');
        $('#Telefone').mask('(00)0000-0000');
        $('#Cpf').mask('000.000.000-00', { reverse: true });
    });
</script>

<h2>Excluir Cliente</h2>
@Mensagem.Erro(ViewBag.status)
<div>
    <h4>Deseja realmente excluir esse registro? </h4>
    <hr />
    @Html.HiddenFor(Model => Model.Id)
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cpf)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Celular)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Celular)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Endereco)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" />
            @Html.ActionLink("Voltar", "Index", null, new {@class = "btn btn-primary"})
        </div>
    }
</div>