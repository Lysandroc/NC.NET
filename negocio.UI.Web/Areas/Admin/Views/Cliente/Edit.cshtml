@model negocio.UI.Web.Areas.Admin.Models.ClienteViewModel

@{
    ViewBag.Title = "Editar Cliente";
}
<script>
    $(document).ready(function() {
        $("#DataNascimento").mask('00/00/0000');
        $('#Celular').mask('(00)0000-0000');
        $('#Telefone').mask('(00)0000-0000');
        $('#Cpf').mask('000.000.000-00', { reverse: true });
    });
</script>

<h3>Editar Cliente</h3>
@Mensagem.Erro(ViewBag.status)

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Nome, "", new {@class = "text-danger"})
            </div>
        </div>

        
        <div class="form-group">
            @Html.LabelFor(model => model.Sexo, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.Sexo, new { htmlAttributes = new { @class = "form-control" } })*@
                
                @Html.RadioButton("Sexo", "M", Model.Sexo == "M" ? true : false)     Masculino
                @Html.RadioButton("Sexo", "F", Model.Sexo == "F" ? true : false)    Feminino
                @Html.ValidationMessageFor(model => model.Sexo, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataNascimento, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
